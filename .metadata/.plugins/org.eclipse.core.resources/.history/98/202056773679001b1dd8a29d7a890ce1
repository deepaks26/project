package com.demo.inter.linkedlist.fromtechidelite;

public class SortLinkedList {

	static class Node{
		int data;
		Node next;
		Node(int data){
			this.data = data;
		}
	}
	
	Node sortLinkedList(Node head){
		Node result = null;
		 Node temp = head;
		while(temp != null) {
			insertAtSorted(result,temp.data);
			temp = temp.next;
		}
	}

	private void insertAtSorted(Node result, int data) {
		if(result == null) {
			result = new Node(data);
		}else if(result.next==null) {
			if(data>result.data) {
				result.next = new Node(data);
			}else {
				Node newNode = new Node(data);
				newNode.next = result;
			}
		}
	}
}
