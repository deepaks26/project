package com.inter.codepract.array;

import java.util.Arrays;

public class FindPairWithGivenDiff {

	boolean findPair(int arr[],int n) {
		Arrays.sort(arr);
		int size = arr.length;
		int i=0;
		int j=1;
		while(i<size && j<size) {
			if(i != j && arr[j]-arr[i]==n) {
				return true;
			}else if(arr[j]-arr[i]>n) {
				i++;
			}else {
				j++;
			}
		}
	}
}
