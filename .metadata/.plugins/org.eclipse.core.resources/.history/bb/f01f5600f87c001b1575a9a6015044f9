package com.inter.heapsort;

public class HeapSortPract1 {

	void sort(int arr[],int n) {
		for(int i=n/2-1;i>=0;i--) {
			heapify(arr,n,i);
		}
		
		for(int i=n-1;i>=0;i++) {
			int temp = arr[0];
			arr[0] = arr[i];
			arr[i] = arr[0];
			heapify(arr,i,0);
		}
	}

	private void heapify(int[] arr, int n, int i) {
		int large = i;
		int left = 2*i+1;
		int right = 2*i+2;
		
		if(left<n && arr[left]>arr[large]) {
			large = left;
		}
		
		if(right<n && arr[right]>arr[large]) {
			large = right;
		}
		
		if(large != i) {
			
		}
		
	}
}
