package com.demo.inter.stack.practice;

import java.util.Stack;

public class ReverseStackUsingRecursionPract1 {

	Stack<Integer> st = new Stack<>();
	void rev() {
		if(st.isEmpty()) {
			return;
		}
		int data = st.pop();
		rev();
		insertAtBottm(data);
	}
	private void insertAtBottm(int data) {
		if(st.isEmpty()) {
			st.push(data);
		}else {
			int d1 = st.pop();
			insertAtBottm(data);
			st.push(d1);
		}
	}
}
